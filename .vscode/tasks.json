{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django run",
            "type": "process",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": [
                "${workspaceFolder}\\backend\\manage.py",
                "runserver"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}